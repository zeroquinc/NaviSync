NAVIDROME_DB_PATH=path/to/navidrome.db

# Optional: Navidrome API endpoint for health checking
# If provided, the app will ping this endpoint to verify Navidrome is running
# Example: http://navidrome.local/rest/ping.view or http://192.168.1.100:4533/rest/ping.view
NAVIDROME_API_URL=

LASTFM_API_KEY=your_lastfm_api_key
LASTFM_USER=your_lastfm_username
SCROBBLED_FIRSTARTISTONLY=True
FIRST_ARTIST_WHITELIST=["Suzan & Freek", "Simon & Garfunkel", "AC/DC"]

# Playcount conflict resolution when Navidrome count is higher than Last.fm
# Options: ask, navidrome, lastfm, higher, increment
# - ask: Prompt user for each conflict (default, interactive)
# - navidrome: Always keep Navidrome count when it's higher (requested feature)
# - lastfm: Always use Last.fm count (overwrite Navidrome)
# - higher: Always use the higher count
# - increment: Add Last.fm count to Navidrome count (e.g., Nav:20 + Last.fm:15 = 35)
#              Useful if you have separate scrobbling sources or manual plays in Navidrome
PLAYCOUNT_CONFLICT_RESOLUTION=ask
########################################
# Required
########################################
LASTFM_API_KEY=your_lastfm_api_key
LASTFM_USER=your_lastfm_username
NAVIDROME_DB_PATH=path/to/navidrome.db

########################################
# Matching (optional)
# Collapse featured/collab artists to the first artist for matching.
# Provide a whitelist of names where this behavior is safe/desired.
########################################
SCROBBLED_FIRSTARTISTONLY=True
FIRST_ARTIST_WHITELIST=["Suzan & Freek", "Simon & Garfunkel", "AC/DC"]

########################################
# Playcount conflict resolution
# How to handle differences between Navidrome and Last.fm
# This only works in DB mode, not in API mode.
# Options: ask | navidrome | lastfm | higher | increment
#  - ask: prompt per track (default)
#  - navidrome: keep Navidrome if it's higher
#  - lastfm: always use Last.fm
#  - higher: use the higher of the two
#  - increment: add Last.fm to Navidrome (Nav:20 + LFM:15 = 35)
########################################
PLAYCOUNT_CONFLICT_RESOLUTION=ask

########################################
# API-only mode (optional)
# When enabled, NaviSync will NOT write to the Navidrome DB.
# It uses Subsonic/OpenSubsonic API to:
#  - scrobble the missing plays (increases only; no decreases)
#  - star loved tracks
# Recommended when Navidrome must stay online during sync.
########################################
USE_NAVIDROME_API=True

# Base URL of your Navidrome instance
NAVIDROME_URL=https://navidrome.example.com

# API credentials (usually your Navidrome username/password)
NAVIDROME_API_USER=
NAVIDROME_API_PASSWORD=

# API client/version info
NAVIDROME_API_VERSION=1.16.1
NAVIDROME_CLIENT_ID=NaviSync

# Rate limit between API calls in milliseconds (tune for your server)
API_RATE_LIMIT_MS=200
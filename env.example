# Requires Navidrome to be stopped during sync
# Example Windows: C:\Users\YourUser\AppData\Roaming\navidrome\navidrome.db
# Example Linux: /var/lib/navidrome/navidrome.db
# Example Docker: /path/to/your/navidrome/data/navidrome.db
NAVIDROME_DB_PATH=Z:/navidrome/navidrome.db
NAVIDROME_URL=http://192.168.0.50:4533

# =============================================================================
# Last.fm Settings
# =============================================================================

LASTFM_API_KEY=lastfmapikey
LASTFM_USER=Username

# Optional: Required only if you want to sync Navidrome stars TO Last.fm loves
# Get API Secret from: https://www.last.fm/api/account/create
# To get session key, run: python -c "from src.lastfm import get_session_key; get_session_key()"
# LASTFM_API_SECRET=yourapisecret
# LASTFM_SESSION_KEY=yoursessionkey

# =============================================================================
# Sync Settings
# =============================================================================

SCROBBLED_FIRSTARTISTONLY=True
FIRST_ARTIST_WHITELIST=["Suzan & Freek", "Simon & Garfunkel", "AC/DC"]

# Enable fuzzy matching for track names (default: True)
# When False, only exact matches will be synced (no prompts for similar tracks)
# When True, prompts user to confirm fuzzy matches for better accuracy
ENABLE_FUZZY_MATCHING=True

# Sync Navidrome starred tracks TO Last.fm as loved tracks (default: False)
# Requires LASTFM_API_SECRET and LASTFM_SESSION_KEY to be configured
SYNC_LOVED_TO_LASTFM=False

# Database Mode - Conflict resolution strategy (only used in database mode)
# Options: ask, navidrome, lastfm, higher, increment
# - ask: Interactive prompts for each conflict (default)
# - navidrome: Keep Navidrome count when higher
# - lastfm: Always use Last.fm count
# - higher: Use whichever count is higher
# - increment: Add Last.fm count to Navidrome count
PLAYCOUNT_CONFLICT_RESOLUTION=ask

# Album matching mode - How to handle tracks with same artist/title on different albums
# Options: album_agnostic, album_aware, prompt
# - album_agnostic: Combine all scrobbles for same artist/title regardless of album (default, current behavior)
#   Example: "Track A" on "Album X" and "Compilation Y" both get 100 plays total from Last.fm
# - album_aware: Match by artist/title/album, allowing different play counts per album
#   Example: "Track A" on "Album X" gets 60 plays, same track on "Compilation Y" gets 40 plays
# - prompt: Like album_agnostic, but always asks which album version(s) to update (no auto-selection)
ALBUM_MATCHING_MODE=album_agnostic